@typeparam TEvent where TEvent : class

<div class="options">
    <div>
        <div @onclick=HandleCreateClickedAsync class="icon-button">
            <PlusIcon />
            <span>@Localizer["ButtonCreate"]</span>
        </div>
    </div>
    <div class="buttons">
        <div @onclick=HandleImportClickedAsync class="icon-button">
            <FileUploadIcon />
            <span>Import</span>
        </div>

        <div @onclick=HandleExportClickedAsync class="icon-button">
            <FileDownloadIcon />
            <span>Export</span>
        </div>

        @foreach (var displayType in AvailableDisplayTypes)
        {
            <span @onclick="() => OnDisplayTypeChanged.InvokeAsync(displayType)" class="icon-button">
                @switch (displayType)
                {
                    case DisplayType.Day:
                        <CalendarDayIcon />
                        break;

                    case DisplayType.Week:
                        <CalendarWeekIcon />
                        break;

                    case DisplayType.Month:
                        <CalendarMonthIcon />
                        break;

                    default:
                        throw new NotImplementedException($"DisplayType {CurrentDisplayType} is not implemented.");
                }
                <span>
                    @displayType
                </span>
            </span>
        }
    </div>
</div>
