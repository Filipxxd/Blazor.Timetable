<div class="modal-wrapper @(ModalService.IsOpen ? "show" : "hide")"
     @onmousedown=Close>
    <div class="modal" @onmousedown:stopPropagation>
        <div class="modal-header">
            @if (ModalService.IsClosable)
            {                
                <span class="modal-title"></span>
                <div class="close-button" @onclick=Close>
                    <CloseIcon />
                </div>
            }
        </div>
        <div class="modal-body">
            @ModalService.ModalContent
        </div>
    </div>
</div>