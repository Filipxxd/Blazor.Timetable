<div class="event-pill" draggable="true" data-event-id="@EventId" @onclick=TogglePopover @key=@EventId>
    @Title
</div>

@if (_popoverVisible)
{
    <div class="popover">
        <div class="popover-header">
            <h4>@Title</h4>
            <button class="close-btn" @onclick=TogglePopover>&#10006;</button>
        </div>
        <div class="popover-body">
            @DetailTemplate
        </div>
    </div>
}
