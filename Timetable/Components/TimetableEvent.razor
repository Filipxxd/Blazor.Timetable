<div style="display: grid; @WrapperStyle">
    <div class="timetable-event-pill @(IsHeaderEvent ? "" : "movable-event")"
         data-event-id="@EventId"
         style="@EventStyle"
         @key="EventId"
         @onmousedown=OnMouseDown
         @onmouseup=OnMouseUp>
         <div class="timetable-event-title">
            @Title
         </div>
    </div>
</div>