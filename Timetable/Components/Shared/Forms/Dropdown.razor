@typeparam TType

<div class="dropdown-container">
    <label>@Label:</label>
    <select @bind="BoundValue">
        @foreach (var option in Options)
        {
            <option value="@option?.ToString()">@option</option>
        }
    </select>
    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="text-danger">@ErrorMessage</div>
    }
</div>
